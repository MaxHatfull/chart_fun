<svg height="1000" width="1000" xmlns="http://www.w3.org/2000/svg" font-family="Arial" style="background-color: #333333">
  <text x="500" y="100" fill="white" dominant-baseline="middle" text-anchor="middle" font-size="40">
    <%= @title %>
  </text>

  <text x="500" y="950" fill="white" dominant-baseline="middle" text-anchor="middle" font-size="30">
    <%= @x_title %>
  </text>

  <text x="50" y="500" fill="white" dominant-baseline="middle" text-anchor="middle" font-size="30" transform="rotate(-90 50,500)">
    <%= @y_title %>
  </text>

  <line x1="<%= plot_area[:left] %>" y1="<%= plot_area[:bottom] %>" x2="<%= plot_area[:right] %>" y2="<%= plot_area[:bottom] %>" style="stroke:white;stroke-width:2"/>
  <line x1="<%= plot_area[:left] %>" y1="<%= plot_area[:bottom] %>" x2="<%= plot_area[:left] %>" y2="<%= plot_area[:top] %>" style="stroke:white;stroke-width:2"/>

  <% (x_axis.labels + y_axis.labels).each do |label| %>
    <text x="<%= label[:x] %>" y="<%= label[:y] %>" fill="white" dominant-baseline="middle" text-anchor="middle">
      <%= label[:text] %>
    </text>
  <% end %>

  <% point_positions.each do |x, y| %>
    <circle cx="<%= x %>" cy="<%= y %>" r="3" fill="white"/>
  <% end %>
  </svg>
